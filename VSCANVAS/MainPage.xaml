<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VSCANVAS.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            <Button
                Text = "I am an INSTRUCTOR"
                Grid.Column="0"
                Margin="150"
                Clicked = "InstructorViewClicked"/>
            <Button
                Text = "I am a STUDENT"
                Margin="150"
                Grid.Column="1"
                Clicked = "StudentViewClicked"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

