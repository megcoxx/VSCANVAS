<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VSCANVAS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VSCANVAS"
    xmlns:local2="clr-namespace:VSCANVAS.Views"
    xmlns:local3="clr-namespace:VSCANVAS.Dialogs"
    Shell.FlyoutBehavior="Disabled"
    Title="VSCANVAS">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
   <ShellContent
        Title="Instructor"
        ContentTemplate="{DataTemplate local2:InstructorView}"
        Route="Instructor"/>
    <ShellContent
        Title="Student"
        ContentTemplate="{DataTemplate local2:StudentInstructorView}"
        Route="StudentInstructor"/>
    <ShellContent
        Title="Course"
        ContentTemplate="{DataTemplate local2:CourseView}"
        Route="Course"/>
    <ShellContent
        Title="Student Details"
        ContentTemplate="{DataTemplate local3:StudentDialog}"
        Route="StudentDetail"/>
    <ShellContent
        Title="Course Details"
        ContentTemplate="{DataTemplate local3:CourseDialog}"
        Route="CourseDetail"/>
    <ShellContent
        Title="Courses Enrolled In"
        ContentTemplate="{DataTemplate local2:CoursesEnrolled}"
        Route="CoursesEnrolled"/>


</Shell>
