<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VSCANVAS.Views.AddStudentToCourseView"
             Title="AddStudentToCourseView"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label
            Text="All Courses"
            FontSize="50"
            Margin="20,20,20,10"
            FontFamily=""/>
        <Label
            Text="Select a course to enroll the student."
            FontSize="30"
            Margin="20,20,20,10"
            FontFamily=""/>
        <Line
            X1="10"
            Y1="0"
            X2="1310"
            Y2="0"
            StrokeLineCap="Round"
            Stroke="Lavender"
            StrokeThickness="4"/>
        <Grid Margin="10,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Entry Text="{Binding Query}" Grid.Column="0"/>
            <Button Text="Search" FontFamily="" FontSize="20" Clicked="SearchClicked" Grid.Column="1"/>
        </Grid>
        <ListView
            SeparatorVisibility="Default"
            SeparatorColor="Lavender"
            ItemTapped="CourseClicked"
            ItemsSource = "{Binding Courses}" SelectedItem="{Binding SelectedCourse}"
            VerticalScrollBarVisibility="Always">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell x:Name="CourseX">
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".5*"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="3.25*"/>
                                <ColumnDefinition Width=".75*"/>
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                FontFamily=""
                                Text="{Binding Code}"
                                FontAttributes="Italic"
                                VerticalOptions="End"
                                FontSize="20"
                                Padding="10,0,0,0"/>
                            <Label
                                FontFamily=""
                                Grid.Column="1"
                                Text="{Binding Name}"
                                FontAttributes="Bold"
                                FontSize="20"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button
            Text="Previous Page"
            Margin="10"
            Clicked = "PreviousPageClicked"
            FontSize="25"/>
        <Button
            Text="Back to Home"
            Margin="10"
            Clicked = "BackToHomeClicked"
            FontSize="25"/>
    </VerticalStackLayout>
</ContentPage>
